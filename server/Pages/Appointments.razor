@page "/appointments"
@layout MainLayout
@inherits RecoCms6.Pages.AppointmentsComponent

@using Radzen
@using Radzen.Blazor
@using RecoCms6.Models.RecoDb
@using Microsoft.AspNetCore.Identity;
@using RecoCms6.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Appointments">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getAppointmentsResult" TItem="RecoCms6.Models.RecoDb.Appointment" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.Appointment" FilterProperty="Claim.ClaimNo" Property="ClaimID" SortProperty="Claim.ClaimNo" Title="Claim">
              <Template Context="data">
              @(data.Claim?.ClaimNo)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.Appointment" FormatString="{0:MM/dd/yyyy}" Property="EntryDate" Title="Entry Date">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.Appointment" FilterProperty="Parameter.ParamDesc" Property="AppointmentType" SortProperty="Parameter.ParamDesc" Title="Appointment Type">
              <Template Context="data">
              @(data.Parameter?.ParamDesc)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.Appointment" Property="Subject" Title="Subject">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.Appointment" FormatString="{0:MM/dd/yyyy}" Property="StartDate" Title="Start Date">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.Appointment" FormatString="{0:MM/dd/yyyy}" Property="EndDate" Title="End Date">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.Appointment" Property="AllDay" Title="All Day">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.Appointment" Property="EnteredBy" Title="Entered By">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.Appointment" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" Width="70px">
              <Template Context="recoCms6ModelsRecoDbAppointment">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, recoCms6ModelsRecoDbAppointment))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
