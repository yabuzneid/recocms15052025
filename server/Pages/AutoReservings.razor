@page "/auto-reservings"
@layout MainLayout
@inherits RecoCms6.Pages.AutoReservingsComponent

@using Radzen
@using Radzen.Blazor
@using RecoCms6.Models.RecoDb
@using Microsoft.AspNetCore.Identity;
@using RecoCms6.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Auto Reservings">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getAutoReservingsResult" TItem="RecoCms6.Models.RecoDb.AutoReserving" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.AutoReserving" FilterProperty="Parameter.ParamAbbrev" Property="ProgramID" SortProperty="Parameter.ParamAbbrev" Title="Parameter">
              <Template Context="data">
              @(data.Parameter?.ParamAbbrev)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.AutoReserving" FilterProperty="Parameter1.ParamDesc" Property="ClaimInitiationID" SortProperty="Parameter1.ParamDesc" Title="Claim Initiation">
              <Template Context="data">
              @(data.Parameter1?.ParamDesc)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.AutoReserving" Property="ClaimOrIncident" Title="Claim Or Incident">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.AutoReserving" FormatString="{0:C}" Property="AdjusterReserve" Title="Adjuster Reserve">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.AutoReserving" FormatString="{0:C}" Property="LegalReserve" Title="Legal Reserve">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="RecoCms6.Models.RecoDb.AutoReserving" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" Width="70px">
              <Template Context="recoCms6ModelsRecoDbAutoReserving">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, recoCms6ModelsRecoDbAutoReserving))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
